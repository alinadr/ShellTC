<Window x:Class="ShellTC.View.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:ShellTC.View"
        xmlns:vm="clr-namespace:ShellTC.ViewModel"
        Title="Message" Height="150" Width="300" Icon="/Images/message.png" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="{Binding Path=.Message}"/>
    </Grid>
</Window>
