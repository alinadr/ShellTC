<Window
    x:Class="ShellTC.MainWindow"
    Title="ShellTC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:v="clr-namespace:ShellTC.View"
    xmlns:vm="clr-namespace:ShellTC.ViewModel"
    Height="700"
    Width="1100"
    Icon="/ShellTC;component/Images/icon.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>

        <v:RightView Grid.Column="0" />
        <v:RightView Grid.Column="2" />
        <GridSplitter
            Grid.Column="1"
            Width="0.2"
            HorizontalAlignment="Stretch"
            Background="Black"
            Foreground="Black" IsEnabled="False" />

    </Grid>
</Window>